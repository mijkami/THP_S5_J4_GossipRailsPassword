      <div class="row justify-content-center align-items-center">

            <div class="col-md-8 col-sm-12">

                  <%= form_tag url_for(action: 'create'), method: "post" do %>

                    <div class="form-group">
                      <%= label_tag 'First Name' %>
                      <%= text_field_tag 'first_name', "", :class => "form-control", :placeholder => "Your first name here" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Last Name' %>
                      <%= text_field_tag 'last_name', "", :class => "form-control", :placeholder => "Your last name here" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Age' %>
                      <%= text_field_tag 'age', "", :class => "form-control", :placeholder => "Your age here" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Description' %>
                      <%= text_area_tag 'description', "", :class => "form-control", :placeholder => "A small description of yourself here", :rows => "4" %>
                    </div>

                    <div class=â€œform-groupâ€>
                       <%= label_tag 'City' %>
                       <%= select_tag(:city_id, options_for_select(@cities), {:class => "form-control"}) %>
                       <br/>
                     </div>

                    <div class="form-group">
                      <%= label_tag 'Email' %>
                      <%= text_field_tag 'email', "", :class => "form-control", :placeholder => "Your email here" %>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Password' %>
                      <%= text_field_tag 'password', "", :class => "form-control", :placeholder => "Your password here", :type => "password" %>
                      <small id="emailHelp" class="form-text text-muted">Your password must be 6 characters minimum</small>
                    </div>

                    <%= submit_tag "Create User", :class => "btn btn-dark" %>

                  <% end %>

            </div>

      </div>