      <div class="row justify-content-center align-items-center my-row">

            <div class="col-md-8 col-sm-12">

                  <%= form_tag url_for(action: 'create'), method: "post" do %>

                    <div class="form-group">
                      <%= label_tag 'Title' %>
                      <%= text_field_tag 'title', "", :class => "form-control", :placeholder => "Your gossip title in here" %>
                      <small id="emailHelp" class="form-text text-muted">Should be between 3 and 14 characters.</small>
                    </div>

                    <div class="form-group">
                      <%= label_tag 'Content' %>
                      <%= text_area_tag 'content', "", :class => "form-control", :placeholder => "Your gossip in here", :rows => "4" %>
                      <small id="emailHelp" class="form-text text-muted">Unlimited characters 🔥 👨‍💻 👩‍💻 🔥 !</small>
                    </div>

                    <%= submit_tag "Create Gossip", :class => "btn btn-dark" %>

                  <% end %>

            </div>

      </div>